<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_production_lot_form_extends" model="ir.ui.view">
		<field name="name">Production Lot Inherit Form</field>
		<field name="model">stock.production.lot</field>
		<field name="inherit_id" ref="stock.view_production_lot_form"/>
		<field name="arch" type="xml">

			<xpath expr="//group/group[1]"  position="after">
				<group>
					<field name="chassis_number" placeholder=""/>
                    <field name="engine_number" placeholder=""/>
					<field name="battery_number" placeholder=""/>
				</group>
			</xpath>

        </field>
    </record>
</odoo>
